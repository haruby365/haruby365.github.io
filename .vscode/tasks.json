{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "rmdir",
            "args": [
                "-r",
                "public"
            ]
        },
        {
            "label": "CreateFolder",
            "dependsOn": [
                "Clean"
            ],
            "type": "shell",
            "command": "mkdir",
            "args": [
                "public"
            ]
        },
        {
            "label": "Generate",
            "dependsOn": [
                "CreateFolder"
            ],
            "type": "shell",
            "command": "../../Hugo/hugo.exe",
            "args": [
                "--minify"
            ],
            "problemMatcher": []
        },
        {
            "label": "Server",
            "dependsOn": [
                "Generate"
            ],
            "type": "shell",
            "command": "../../Hugo/hugo.exe",
            "args": [
                "server",
                "-p",
                "1313"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Gallery - Filename",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "SupportApp/SupportApp.csproj",
                "--",
                "gallery-generate-filename",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Gallery - New",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "SupportApp/SupportApp.csproj",
                "--",
                "gallery-generate-new"
            ],
            "problemMatcher": []
        }
    ]
}